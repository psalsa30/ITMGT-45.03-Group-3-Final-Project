// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id        String   @id @default(cuid())
  name      String
  price     Int      // store pesos as integer (e.g., 180)
  campus    String
  category  String
  imageUrl  String?
  createdAt DateTime @default(now())
}

model Order {
  id        String     @id @default(cuid())
  campus    String
  pickup    String
  total     Int
  createdAt DateTime   @default(now())
  items     OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  qty       Int
  price     Int     // snapshot at order time
  Order     Order   @relation(fields: [orderId], references: [id])
}


